<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css">
  <script src="/javascript/main.js"></script>
  <script src="/javascript/jquery.js"></script>
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <title>Edit Profile</title>
</head>
<body>
  <%- include('../partials/navbar-tutor.ejs') %> 
  <div class="main-block">
    <center>
      <div id="updateProfile" class="w3-panel w3-green" style="display: none;">
        <h3>You have updated your profile</h3>
      </div>
      <div id="emailExists" class="w3-panel w3-red" style="display: none;">
        <h3>The email already belongs to another user</h3>
      </div>
      <div id="invalidEmail" class="w3-panel w3-red" style="display: none;">
        <h3>Invalid email input</h3>
      </div>
      <h1>Edit Profile</h1>
    </center>
    <form action="/api/users/tutor/updateprofile" method="post">
      <h3>Email</h3>
      <input type="email" name="email" id="email" required placeholder="Email Address" value="<%- email %> ">
      <span id="emailExistsMsg"></span>
      <h3>Name</h3>
      <div style="text-align: center;">
        <input type="text" name="fname" id="fname" placeholder="First Name" value="<%- fname %>">
        <input type="text" name="lname" id="fname" placeholder="Last Name" value="<%- lname %>">
      </div>
      <h3>Bio</h3>
      <div style="text-align: center;">
        <div>
          <textarea name="bio" id="bio" cols="40" rows="10" style="resize: none;" placeholder="Your bio is empty!"><% if (bio) { %><%- bio %><% } %></textarea>
        </div>
      </div>
      <h3>Gender</h3>
      <div style="text-align: center;">
        <select name="gender" id="">
          <% if (!gender) { %>
            <option value="none" selected disabled hidden>Not Set</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
          <% } else if(gender == 'M') { %>
            <option value="male">Male</option>
            <option value="female">Female</option>
          <% } else { %> 
          <option value="female">Female</option>
          <option value="male">Male</option>
          <% } %> 
        </select>
      </div>
      <br>
      <div style="text-align: right;">
        <button type="submit" id="post-btn">Update Profile</button>
      </div>
    </form>
  </div>
</body>
</html>
<script>
  if(getUrlVars().updated == 'true') {
    $('#updateProfile').show(true);
  }
  if(getUrlVars().emailExists == 'true') {
    $('#emailExists').show(true);
  }
  if(getUrlVars().InvalidEmail == 'true') {
    $('#invalidEmail').show(true);
  }
</script>