<!DOCTYPE html>
<html>
  <head>
    <title>View Scheduled Appointments </title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="/javascript/jquery.js"></script>
  </head>
<body>
  <%- include("../partials/navbar-student") %> 
  <div class="main-block">

    <h1><i class="fa fa-calendar"></i> View Scheduled Appointments</h1>
      <div style="overflow-y: auto; max-height: 500px;">
        <table class="w3-table-all">
          <thead>
            <tr>
              <th>STATUS</th>
              <th>COURSE</th>
              <th>TUTOR</th>
              <th>APPOINTMENT TIME</th>
            </tr>
          </thead>
          <% for( let index = 0; index < 25; index++ ) { %>
            <tr data-href="">
              <td id="status" name="status" style="color: orange">PENDING</td>
              <td id="course" name="course">COMS 4033</td>
              <td id="tutor" name="tutor">Foo Bar</td>
              <td id="date" name="date">1/23/4567</td>
            </tr>
          <% } %>
        </table>
      </div>

  </div>
</body>
</html>

<script>
  $('tr[data-href]').on("click", function() {
    document.location = $(this).data('href');
  });
  $('tr[data-href]').hover(function() {
    $(this).css('background-color', '#f05f40');
    $(this).css('cursor', 'pointer');
  }, function() {
    $(this).css('background-color', '');
  });
</script>

<style>
  th {
    font-size: large;
  }
</style>