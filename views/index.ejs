    <div class="w3-quarter">
      <span class="w3-xxlarge" style="color: white"><%- i[1].ROWS %></span>
      <br><p style="color: white">Tutors</p>
    </div>
    <div class="w3-quarter">
      <span class="w3-xxlarge" style="color: white"><%- i[0].ROWS %></span>
      <br><p style="color: white">Students</p>
    </div>
    <div class="w3-quarter">
      <span class="w3-xxlarge" style="color: white"><%- i[3].ROWS %></span>
      <br><p style="color: white">Appointments</p>
    </div>
  </div>
  <br><br>

  <!-- Contact Form -->
  <div class="w3-container  w3-content w3-padding-64" style="max-width:800px" id="contact">
    <h2 class="w3-wide w3-center">CONTACT</h2>
    <div class="w3-row w3-padding-32">
      <div class="w3-col m6 w3-large w3-margin-bottom">
        <i class="fa fa-map-marker" style="width:30px"></i>Russellville, AR<br>
        <i class="fa fa-phone" style="width:30px"></i>Phone: +555 555 555<br>
        <i class="fa fa-envelope" style="width:30px"></i>Email: twt.trustworthytutor@gmail.com<br>
      </div>
      <div class="w3-col m6">
        <form id="contactForm">
          <div class="w3-row-padding" style="margin:0 -16px 8px -16px">
            <div class="w3-half">
              <input id="nameTB" class="w3-input w3-border" type="text" placeholder="Name" required name="Name">
            </div>
            <div class="w3-half">
              <input id="email" class="w3-input w3-border" type="email" placeholder="Email" required name="Email">
            </div>
          </div>
          <input id="messageBox" class="w3-input w3-border" type="text" minlength="5" placeholder="Message" required name="Message">
          <button class="w3-button w3-black w3-section w3-right" onclick="sendEmail()">SEND</button>
        </form>
      </div>
    </div>
  </div>


</body>
</html>

<script>
  document.getElementById('contactForm').addEventListener("click", function(e) {
    e.preventDefault();
  })
  async function sendEmail() {
    fetch('/sendemail', {
      method: 'post',
      headers: { 'Content-Type': 'application/json'},
      body: JSON.stringify({
        Email: $('#email').val(),
        Name: $('#nameTB').val(),
        Message: $('#messageBox').val()
      })
    }).then(res => {
      if(res.status == 200) {
        console.log(res.data);
        alert('Mail sent!')
        document.getElementById('contactForm').reset();
      } else {
        alert('Mail not send')
      }
    })
  }
</script>

